<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>These are all the available campGrounds!</h1>
<a href="/campgrounds/new">Add a new CampGround</a>
<ul>
  <% for(let camp of campgrounds){ %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-4">
        <img
          crossorigin="anonymous"
          src="<%= camp.image[0].url %>"
          alt=""
          height="300"
          class="image-fluid"
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= camp.title %></h5>
          <p class="card-text"><%= camp.description %></p>
          <p class="card-text">
            <small class="text-muted"> <%= camp.location %> </small>
          </p>
          <a class="btn btn-primary" href="/campgrounds/<%= camp._id %>"
            >View <%= camp.title %></a
          >
        </div>
      </div>
    </div>
  </div>
  <% } %>
</ul>

<script>
  const mapToken = '<%- process.env.MAPBOX_TOKEN %>'
  const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>
